<!DOCTYPE html>
<html>
  <head>
    <title>RailsSalesManagementSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if signed_in? %>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Rails CRM', root_path, class: 'navbar-brand' %>
      </div>

      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to t('layout.sales_reports'), sales_reports_path %></li>
          <li><%= link_to t('layout.prospects'), prospects_path %></li>
          <li><%= link_to t('layout.estimates'), estimates_path %></li>
          <li><%= link_to t('layout.orders'), orders_path %></li>
          <li><%= link_to t('layout.delivery_slips'), delivery_slips_path %></li>
          <li><%= link_to t('layout.earnings'), earnings_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">設定<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t('layout.customers'), customers_path %></li>
              <li><%= link_to t('layout.products'), products_path %></li>
              <li><%= link_to t('layout.closing_groups'), closing_groups_path %></li>
              <li><%= link_to t('layout.mysetting'), mysetting_path %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('devise.signout'), destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </nav>
    <% end %>
    <div class="container-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
