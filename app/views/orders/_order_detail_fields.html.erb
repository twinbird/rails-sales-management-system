<tr class="nested-fields">
  <td class="col-sm-1"><%= f.text_field :display_order, class: 'form-control' %></td>
  <td class="col-sm-2"><%= f.select :product_id, @products.map{|p| [p.name, p.id]}, {}, class: 'form-control' %></td>
  <td class="col-sm-2"><%= f.text_field :product_name, class: 'form-control' %></td>
  <td class="col-sm-1"><%= f.text_field :quantity, class: 'form-control' %></td>
  <td class="col-sm-2"><%= f.text_field :unit_price, class: 'form-control' %></td>
  <td class="col-sm-2"><%= f.text_field :price, disabled: true, class: 'form-control' %></td>
  <td class="col-sm-1"><%= link_to_remove_association t('.remove_detail'), f %></td>
</tr>
