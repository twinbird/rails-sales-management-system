<div class="row mt-3"></div>

<h4><%= t('.title') %></h4>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.prospect_id') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.prospect.try(:title) %>
  </div>
  <div class="col-sm-2">
    <%= link_to t('.edit'), edit_estimate_path(@estimate), class: 'btn btn-warning btn-sm' %>
    <%= link_to t('.destroy'), @estimate, method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.title') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.title %>
  </div>
</div>


<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.customer_name') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.customer_name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.estimate_no') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.estimate_no %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.issue_date') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.issue_date.to_s %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.due_date') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.due_date.to_s %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.payment_term') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.payment_term %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.submitted_flag') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= submitted_estimate_message(@estimate) %>
  </div>
</div>

