<div class="row mt-3"></div>

<h4><%= t('.title') %></h4>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.prospect_id') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @estimate.prospect.try(:title) %>
  </div>
  <div class="col-sm-2">
    <%= link_to t('.edit'), edit_estimate_path(@estimate), class: 'btn btn-warning btn-sm' %>
    <% unless (@estimate.submitted_flag || @estimate.ordered_flag) %>
      <%= link_to t('.destroy'), @estimate, method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn btn-danger btn-sm' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.submitted_flag') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= submitted_estimate_message(@estimate) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.estimate.ordered_flag') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= ordered_estimate_message(@estimate) %>
  </div>
</div>

<div class="row mt-3"></div>

<div class="row">
  <div class="col-sm-7">
    <iframe src="<%= report_estimate_path(@estimate) %>" width="100%" height="100%"></iframe>
  </div>
</div>
