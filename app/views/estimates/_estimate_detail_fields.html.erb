<tr class="nested-fields">
  <td class="d-none"><%= f.text_field :display_order, class: 'form-control form-control-sm estimate-detail-display-order' %></td>
  <td><%= f.select :product_id, @products.map{|p| [p.name, p.id]}, {include_blank: true}, class: 'form-control searchable form-control-sm product-select' %></td>
  <td><%= f.text_field :product_name, class: 'form-control form-control-sm product-name' %></td>
  <td><%= f.text_field :quantity, class: 'form-control form-control-sm estimate-detail-quantity numeric-text', value: number_to_currency(f.object.quantity.to_f, delimiter: '', unit: '') %></td>
  <td><%= f.text_field :unit_price, class: 'form-control form-control-sm estimate-detail-unit-price default-price numeric-text', value: number_to_currency(f.object.unit_price.to_f, delimiter: '', unit: '') %></td>
  <td><%= f.text_field :price, disabled: true, class: 'form-control form-control-sm estimate-detail-price numeric-text' %></td>
  <td><%= link_to_remove_association t('.remove_detail'), f, class: 'btn btn-danger btn-sm remove-detail-button' %></td>
</tr>
