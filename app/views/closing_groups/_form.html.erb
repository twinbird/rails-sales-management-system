<%= form_with(model: closing_group, local: true) do |form| %>
  <% if closing_group.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% closing_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :closing_group_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
