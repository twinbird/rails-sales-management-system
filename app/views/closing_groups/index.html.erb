<p id="notice"><%= notice %></p>

<h1>Closing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Company information</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @closing_groups.each do |closing_group| %>
      <tr>
        <td><%= closing_group.company_information %></td>
        <td><%= closing_group.name %></td>
        <td><%= link_to 'Show', closing_group %></td>
        <td><%= link_to 'Edit', edit_closing_group_path(closing_group) %></td>
        <td><%= link_to 'Destroy', closing_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Closing Group', new_closing_group_path %>
