<h1><%= t('.title') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.closing_group.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @closing_groups.each do |closing_group| %>
      <tr>
        <td><%= closing_group.name %></td>
        <td><%= link_to t('.show'), closing_group %></td>
        <td><%= link_to t('.edit'), edit_closing_group_path(closing_group) %></td>
        <td><%= link_to t('.destroy'), closing_group, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@closing_group) %>

<br>

<%= link_to t('.add_closing_group'), new_closing_group_path %>
