<%= form_with(model: user, local: true, class: 'form-horizontal', url: path, method: method) do |form| %>
  <%= render 'shared/error_messages', object: user %>

  <%= form.fields_for :user_profile do |f| %>
    <div class="form-group">
      <%= f.hidden_field :id %>
      <div class="field">
        <%= f.label :name, class: 'control-label col-sm-2' %>
        <div class="col-sm-5">
          <%= f.text_field :name, autofocus: true, id: :product_name, class: 'form-control form-control-sm' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :email, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.email_field :email, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :password, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.password_field :password, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :password_confirmation, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.password_field :password_confirmation, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1"></div>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary col-sm-1' %>
    </div>
  </div>
<% end %>
