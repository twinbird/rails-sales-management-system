<%= form_with(model: product, local: true, class: 'form-horizontal') do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :name, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.text_field :name, id: :product_name, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :default_price, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.text_field :default_price, id: :product_default_price, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1"></div>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary col-sm-1' %>
    </div>
  </div>
<% end %>
