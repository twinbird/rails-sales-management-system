<div class="row mt-3"></div>

<h4><%= t('.title') %></h4>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.product.name') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @product.name %>
  </div>
  <div class="col-sm-2">
    <%= link_to t('.edit'), edit_product_path(@product), class: 'btn btn-sm btn-warning' %>
    <%= link_to t('.destroy'), @product, method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.product.default_price') %>:</strong>
  </div>
  <div class="col-sm-4">
    <%= @product.default_price %>
  </div>
</div>
