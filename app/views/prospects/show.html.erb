<div class="row mt-3"></div>

<h4><%= t('.title') %></h4>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.title') %></strong>:
  </div>
  <div class="col-sm-5">
    <%= @prospect.title %>
  </div>
  <div class="col-sm-2">
    <%= link_to t('.edit'), edit_prospect_path(@prospect), class: 'btn btn-warning btn-sm' %>
    <%= link_to t('.destroy'), @prospect, method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.description') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.description %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.customer_id') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.customer.name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.rank') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.rank %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.prospect_amount') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.prospect_amount %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.prospect_order_date') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.prospect_order_date&.to_s(:date) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.prospect_earning_date') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.prospect_earning_date&.to_s(:date) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.distribute') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.distribute %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.user_profile_id') %>:</strong>
  </div>
  <div class="col-sm-5">
    <%= @prospect.user_profile.name %>
  </div>
</div>

<div class="row mt-3">
  <div class="ml-3"></div>
  <h5><%= t('.latest_prospects') %></h5>
</div>

<div class="row">
  <div class="col-sm-6">
    <h6><%= t('.latest_prospects') %></h6>
    <table class="table table-sm">
      <thead>
        <tr>
          <th></th>
          <th><%= t('activerecord.attributes.prospect.title') %></th>
          <th><%= t('activerecord.attributes.prospect.prospect_amount') %></th>
          <th><%= t('activerecord.attributes.prospect.created_at') %></th>
        </tr>
      </thead>
      <tbody>
      <% @latest_prospects.each do |prospect| %>
        <tr>
          <td><%= link_to t('.open'), prospect_path(prospect), class: 'btn btn-info btn-sm' %></td>
          <td><%= prospect.title %></td>
          <td><%= prospect.prospect_amount %></td>
          <td><%= prospect.created_at.to_s(:date) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
