<div class="row mt-3"></div>

<h4><%= t('.title') %></h4>

<div class="row">
  <div class="col-sm-2">
    <strong><%= t('activerecord.attributes.prospect.title') %></strong>:
  </div>
  <div class="col-sm-5">
    <%= @prospect.title %>
  </div>
