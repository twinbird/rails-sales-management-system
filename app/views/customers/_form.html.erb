<%= form_with(model: customer, local: true, class: 'form-horizontal') do |form| %>
  <%= render 'shared/error_messages', object: customer %>

  <div class="form-group">
    <div class="field">
      <%= form.label :name, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.text_field :name, id: :customer_name, class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="field">
      <%= form.label :payment_term, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= form.text_field :payment_term, id: :customer_payment_term , class: 'form-control form-control-sm' %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-1"></div>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary col-sm-1' %>
    </div>
  </div>
<% end %>
